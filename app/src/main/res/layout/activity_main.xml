<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/screenWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Screen width: " />

        <EditText
            android:id="@+id/screenWidthET"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:hint="e.g. 1089"
            android:inputType="number"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/screenWidthOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="OK" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leftAlign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="left Align" />

        <Button
            android:id="@+id/centerAlign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="center Align" />

         <Button
            android:id="@+id/rightAlign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="right Align" />
    </LinearLayout>

    <EditText
        android:id="@+id/spanEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:hint="Enter text..."
android:paddingLeft="16dp"
        android:padding="14dp"
        android:textSize="16dp" />

</LinearLayout>
